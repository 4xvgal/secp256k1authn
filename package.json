{
  "name": "secp256k1authn",
  "description": "WebAuthn-style auth using secp256k1 + HD keys",
  "version": "0.1.0",
  "type": "module",
  "private": true,
  "files": [
    "dist"
  ],
  "module": "./dist/index.js",
  "main": "./dist/index.cjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    },
    "./package.json": "./package.json"
  },
  "scripts": {
    "build": "bunup",
    "dev": "bunup --watch"
  },
  "keywords": [
    "webauthn",
    "secp256k1",
    "bip32",
    "bip39",
    "hd-keys"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@noble/hashes": "^1.4.0",
    "@noble/secp256k1": "^2.0.0",
    "@scure/bip32": "^1.4.0",
    "@scure/bip39": "^1.2.0"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "bunup": "^0.15.14"
  },
  "peerDependencies": {
    "typescript": "^5"
  }
}
